{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "strict": true,
    "esModuleInterop": true,
    "types": ["@cloudflare/workers-types", "node"],
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@db": ["./src/db"],
      "@db/*": ["./src/db/*"],
      "@routes": ["./src/routes"],
      "@routes/*": ["./src/routes/*"],
      "@services": ["./src/services"],
      "@services/*": ["./src/services/*"],
      "@utils": ["./src/utils"],
      "@utils/*": ["./src/utils/*"]
    }
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules"]
}
